#!/bin/bash

parentTitle="$1"
parentWindow="$2"

#echo "$parentTitle:$parentWindow"

# Function to create a temporary pane
function create_temp_pane() {

  pane_id=$(tmux split-window -v -l 30 -d "$1")
  echo $pane_id

}


function create_temp_pane_parent() {

  pecho "tmux -t "$parentTitle:$parentWindow" split-window -v -l 30 -d \"$1\""
#  pane_id=$(tmux -t "$parentTitle:$parentWindow" split-window -v -l 30 -d "$1")
#  pane_id=$(tmux -T "$parentTitle:$parentWindow" split-window -v -l 30 -d "$1")
  echo "tmux -T \"$parentTitle:$parentWindow\" split-window -v -l 30 -d \"$1\"\; select-pane -D \;" > /tmp/tmuxcallback

}

# Function to close a temporary pane
function close_temp_pane() {
    tmux killpane -t $1
}

# Interactive Menu
choice=$(echo -e "tdefault\njot\ntodo\nhtop" | fzf --height 40% --reverse --border)

case $choice in
    "tdefault")
        tmuxdefault=$(ls -1 ~/lab/scripts/tmuxp/ | fzf --height 40% --reverse --border)
        tmuxdefault=$(echo "$tmuxdefault" | sed 's/.yaml//')
        echo "$tmuxdefault" > ~/.tmuxdefault
#        close_temp_pane $pane_id
        exit
        ;;
    "jot")
        jotNotes=$(ls -1 /tmp/nap-* | fzf --height 40% --reverse --border)
        pane_id=$(create_temp_pane_parent "nvim $jotNotes")
        ;;
    "todo")
        pane_id=$(create_temp_pane_parent "nvim ~/.todo")
        ;;
    "htop")
        pane_id=$(create_temp_pane "htop")
        ;;
esac

#read -p "Press Enter to close the temporary pane..."
#read "Press Enter to close the temporary pane..."
if [[ $pane_id ]]; then
  close_temp_pane $pane_id
fi
#tmux send-keys "exit" C-m
tmux kill-window
sleep 2
exit
